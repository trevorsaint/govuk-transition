{%- if (params.text or params.html) and params.href %}
<div class="app-chevron-banner app-chevron-banner--hover-border">
  <div class="app-chevron-banner__link-container">
    <a class="app-chevron-banner__link govuk-link" href="{{ params.href }}"{% for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
      {{- params.html | safe if params.html else params.text -}}
    </a>
  </div>
</div>
{% endif -%}
